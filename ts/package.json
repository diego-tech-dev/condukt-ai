{
  "name": "missiongraph-ts",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "TypeScript contract-first pipeline runtime for MissionGraph",
  "packageManager": "pnpm@10.6.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "check": "tsc -p tsconfig.json --noEmit",
    "test": "tsx --test test/**/*.test.ts",
    "quickstart": "tsx examples/quickstart-debug.ts",
    "quickstart:broken": "tsx examples/quickstart-debug.ts --broken"
  },
  "dependencies": {
    "@standard-schema/spec": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "zod": "^3.24.1"
  }
}
