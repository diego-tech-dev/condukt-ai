{
  "name": "condukt",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "description": "TypeScript contract-first pipeline runtime for Condukt",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/diego-tech-dev/missiongraph.git",
    "directory": "ts"
  },
  "homepage": "https://github.com/diego-tech-dev/missiongraph/tree/main/ts",
  "bugs": {
    "url": "https://github.com/diego-tech-dev/missiongraph/issues"
  },
  "keywords": [
    "agent",
    "orchestration",
    "contracts",
    "trace",
    "standard-schema",
    "llm"
  ],
  "packageManager": "pnpm@10.6.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "pnpm lint && pnpm typecheck",
    "test": "tsx --test test/*.test.ts",
    "quickstart": "tsx examples/quickstart-debug.ts",
    "quickstart:broken": "tsx examples/quickstart-debug.ts --broken",
    "trial:start": "tsx scripts/trial-metrics.ts start",
    "trial:finish": "tsx scripts/trial-metrics.ts finish",
    "trial:report": "tsx scripts/trial-metrics.ts report",
    "release:check": "pnpm clean && pnpm check && pnpm test && pnpm build && pnpm pack --pack-destination .artifacts && rm -rf .artifacts",
    "prepack": "pnpm build"
  },
  "dependencies": {
    "@standard-schema/spec": "^1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@types/node": "^22.10.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "zod": "^3.24.1"
  }
}
