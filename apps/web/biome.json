{
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "files": {
    "includes": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.mjs",
      "**/*.json",
      "**/*.md",
      "**/*.mdx",
      "!dist",
      "!.astro",
      "!node_modules"
    ]
  }
}
